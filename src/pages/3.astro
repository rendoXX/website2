import '../styles/global.css';
import Footer from '../components/footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flappy Covet</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: skyblue;
        }
        canvas {
            background-color: lightblue;
            border: 2px solid black;
        }
        #startButton {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <canvas id="gameCanvas" width="600" height="700"></canvas>
    <button id="startButton">Start Game</button>
    <script>
        const canvas = document.getElementById("gameCanvas");
        const ctx = canvas.getContext("2d");
        const startButton = document.getElementById("startButton");
        
        const covetImg = new Image();
        covetImg.src = "/covet.png"; 

        let covet = { x: 100, y: 250, width: 50, height: 40, velocity: 0, gravity: 0.5 };
        let pipes = [];
        let score = 0;
        let gameRunning = false;

        function drawCovet() {
            ctx.drawImage(covetImg, covet.x, covet.y, covet.width, covet.height);
        }

        function drawPipes() {
            ctx.fillStyle = "green";
            pipes.forEach(pipe => {
                ctx.fillRect(pipe.x, 0, pipe.width, pipe.topHeight);
                ctx.fillRect(pipe.x, pipe.topHeight + pipe.gap, pipe.width, canvas.height - pipe.topHeight - pipe.gap);
            });
        }

        function updatePipes() {
            pipes.forEach(pipe => {
                pipe.x -= 2;
                if (pipe.x + pipe.width < 0) {
                    pipes.shift();
                    score++;
                }
                if (
                    (covet.x < pipe.x + pipe.width && covet.x + covet.width > pipe.x && 
                    (covet.y < pipe.topHeight || covet.y + covet.height > pipe.topHeight + pipe.gap)) || 
                    covet.y > canvas.height - covet.height
                ) {
                    gameRunning = false;
                    alert("Game Over! Score: " + score);
                    location.reload();
                }
            });
        }

        function spawnPipe() {
            let topHeight = Math.floor(Math.random() * 200) + 50;
            let gap = 150;
            pipes.push({ x: canvas.width, width: 70, topHeight, gap });
        }

        function gameLoop() {
            if (!gameRunning) return;
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            covet.velocity += covet.gravity;
            covet.y += covet.velocity;
            drawCovet();
            drawPipes();
            updatePipes();
            requestAnimationFrame(gameLoop);
        }

        document.addEventListener("keydown", function (event) {
            if (event.code === "Space" && gameRunning) {
                covet.velocity = -7;
            }
        });

        startButton.addEventListener("click", function () {
            gameRunning = true;
            pipes = [];
            covet.y = 250;
            covet.velocity = 0;
            score = 0;
            setInterval(spawnPipe, 2000);
            gameLoop();
            startButton.style.display = "none";
        });
    </script>
<Footer />
</body>
</html>
