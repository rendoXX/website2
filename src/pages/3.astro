---
import '../styles/global.css';
import Footer from '../components/footer.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Firweb - Car Game</title>
    <link rel="icon" href="/firwoodPic.png">
    <style>
      body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #1e1e1e;
        color: white;
        font-family: Arial, sans-serif;
        overflow: hidden;
      }
      #gameContainer {
        position: relative;
        width: 300px;
        height: 400px;
        background: gray;
        overflow: hidden;
        border: 2px solid white;
      }
      .car {
        width: 50px;
        height: 80px;
        background: red;
        position: absolute;
        bottom: 10px;
        left: 125px;
      }
      .obstacle {
        width: 50px;
        height: 80px;
        background: black;
        position: absolute;
        top: -80px;
      }
      header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
      }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li><button onclick="window.location.href='/'">Home</button></li>
          <li><button onclick="window.location.href='/2'">Test1</button></li>
          <li><button onclick="window.location.href='/3'">Test2</button></li>
        </ul>
      </nav>
    </header>

    <h1>Car Dodge Game</h1>
    <p>Avoid the obstacles! Use left/right arrow keys.</p>
    <div id="gameContainer">
      <div class="car" id="car"></div>
    </div>

    <script>
      const car = document.getElementById("car");
      const gameContainer = document.getElementById("gameContainer");

      let carPosition = 125;
      let gameOver = false; // Flag to prevent multiple alerts

      document.addEventListener("keydown", function (event) {
        if (event.key === "ArrowLeft" && carPosition > 50) {
          carPosition -= 75;
        } else if (event.key === "ArrowRight" && carPosition < 200) {
          carPosition += 75;
        }
        car.style.left = carPosition + "px";
      });

      function spawnObstacle() {
        if (gameOver) return; // Stop spawning when game is over

        const obstacle = document.createElement("div");
        obstacle.classList.add("obstacle");
        obstacle.style.left = [50, 125, 200][Math.floor(Math.random() * 3)] + "px";
        obstacle.style.top = "-80px"; // Explicitly setting this here again
        gameContainer.appendChild(obstacle);

        let obstaclePosition = -80;
        const fallInterval = setInterval(() => {
          if (gameOver) {
            clearInterval(fallInterval);
            obstacle.remove();
            return;
          }

          obstaclePosition += 5;
          obstacle.style.top = obstaclePosition + "px"; // Ensure position updates
          
          // Debugging log to check position updates
          console.log(`Obstacle Position: ${obstacle.style.top}`);

          // Check for collision
          if (obstaclePosition > 320 && parseInt(obstacle.style.left) === carPosition) {
            if (!gameOver) {
              gameOver = true;
              alert("Game Over! Refresh to play again.");
              location.reload();
            }
          }

          // Remove obstacle when it goes off-screen
          if (obstaclePosition > 400) {
            clearInterval(fallInterval);
            obstacle.remove();
          }
        }, 50);
      }

      setInterval(spawnObstacle, 1500);
    </script>
<Footer />
  </body>
</html>
