---
import '../styles/global.css';
import Footer from '../components/footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flappy Covet</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: skyblue;
        }
        canvas {
            background-color: lightblue;
        }
    </style>
</head>
<body>
    <canvas id="gameCanvas"></canvas>
    <script>
        const canvas = document.getElementById("gameCanvas");
        const ctx = canvas.getContext("2d");
        canvas.width = 400;
        canvas.height = 500;

        const covetImg = new Image();
        covetImg.src = "/covet.png"; // Make sure you have this image in your public folder

        let covet = { x: 50, y: 200, width: 40, height: 30, velocity: 0, gravity: 0.5 };
        let pipes = [];
        let score = 0;
        let gameRunning = true;

        function drawCovet() {
            ctx.drawImage(covetImg, covet.x, covet.y, covet.width, covet.height);
        }

        function drawPipes() {
            ctx.fillStyle = "green";
            pipes.forEach(pipe => {
                ctx.fillRect(pipe.x, 0, pipe.width, pipe.topHeight);
                ctx.fillRect(pipe.x, pipe.topHeight + pipe.gap, pipe.width, canvas.height - pipe.topHeight - pipe.gap);
            });
        }

        function updatePipes() {
            pipes.forEach(pipe => {
                pipe.x -= 2;
                if (pipe.x + pipe.width < 0) {
                    pipes.shift();
                    score++;
                }
                if (
                    (covet.x < pipe.x + pipe.width && covet.x + covet.width > pipe.x && 
                    (covet.y < pipe.topHeight || covet.y + covet.height > pipe.topHeight + pipe.gap)) || 
                    covet.y > canvas.height - covet.height
                ) {
                    gameRunning = false;
                    alert("Game Over! Score: " + score);
                    location.reload();
                }
            });
        }

        function spawnPipe() {
            let topHeight = Math.floor(Math.random() * 150) + 50;
            let gap = 120;
            pipes.push({ x: canvas.width, width: 50, topHeight, gap });
        }

        function gameLoop() {
            if (!gameRunning) return;
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            covet.velocity += covet.gravity;
            covet.y += covet.velocity;
            drawCovet();
            drawPipes();
            updatePipes();
            requestAnimationFrame(gameLoop);
        }

        document.addEventListener("keydown", function (event) {
            if (event.code === "Space") {
                covet.velocity = -7;
            }
        });

        setInterval(spawnPipe, 2000);
        gameLoop();
    </script>
<Footer />
</body>
</html>
