import '../styles/global.css';
import Footer from '../components/footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flappy Covet</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: skyblue;
            flex-direction: column;
        }
        canvas {
            background-color: lightblue;
            border: 2px solid black;
        }
        #scoreDisplay {
            font-size: 24px;
            font-weight: bold;
            color: white;
            position: absolute;
            top: 20px;
        }
        #startText {
            font-size: 20px;
            color: white;
            position: absolute;
            bottom: 50px;
        }
    </style>
</head>
<body>
    <div id="scoreDisplay">Score: 0</div>
    <canvas id="gameCanvas"></canvas>
    <div id="startText">Press SPACE to Start</div>

    <script>
        const canvas = document.getElementById("gameCanvas");
        const ctx = canvas.getContext("2d");
        const scoreDisplay = document.getElementById("scoreDisplay");
        const startText = document.getElementById("startText");

        // Bigger canvas for better visibility
        canvas.width = 500;
        canvas.height = 600;

        const covetImg = new Image();
        covetImg.src = "/covet.png"; // Make sure you have this image in your public folder

        let covet, pipes, score, gameRunning, gameStarted;

        function resetGame() {
            covet = { x: 100, y: 250, width: 50, height: 40, velocity: 0, gravity: 0.5 };
            pipes = [];
            score = 0;
            gameRunning = false;
            gameStarted = false;
            startText.style.display = "block";
            scoreDisplay.textContent = "Score: 0";
        }

        function drawCovet() {
            ctx.drawImage(covetImg, covet.x, covet.y, covet.width, covet.height);
        }

        function drawPipes() {
            ctx.fillStyle = "green";
            pipes.forEach(pipe => {
                ctx.fillRect(pipe.x, 0, pipe.width, pipe.topHeight);
                ctx.fillRect(pipe.x, pipe.topHeight + pipe.gap, pipe.width, canvas.height - pipe.topHeight - pipe.gap);
            });
        }

        function updatePipes() {
            pipes.forEach(pipe => {
                pipe.x -= 3; // Speed of pipes
                if (pipe.x + pipe.width < 0) {
                    pipes.shift();
                    score++;
                    scoreDisplay.textContent = "Score: " + score;
                }
                if (
                    (covet.x < pipe.x + pipe.width && covet.x + covet.width > pipe.x && 
                    (covet.y < pipe.topHeight || covet.y + covet.height > pipe.topHeight + pipe.gap)) || 
                    covet.y > canvas.height - covet.height
                ) {
                    gameRunning = false;
                    startText.innerText = `Game Over! Score: ${score} (Press SPACE to Restart)`;
                    startText.style.display = "block";
                }
            });
        }

        function spawnPipe() {
            let topHeight = Math.floor(Math.random() * 200) + 50;
            let gap = 140;
            pipes.push({ x: canvas.width, width: 60, topHeight, gap });
        }

        function gameLoop() {
            if (!gameRunning) return;
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            covet.velocity += covet.gravity;
            covet.y += covet.velocity;
            drawCovet();
            drawPipes();
            updatePipes();
            requestAnimationFrame(gameLoop);
        }

        document.addEventListener("keydown", function (event) {
            if (event.code === "Space") {
                if (!gameStarted) {
                    gameStarted = true;
                    gameRunning = true;
                    startText.style.display = "none";
                    setInterval(spawnPipe, 2000);
                    gameLoop();
                }
                if (gameRunning) {
                    covet.velocity = -7;
                } else {
                    resetGame();
                }
            }
        });

        resetGame();
    </script>
<Footer />
</body>
</html>
