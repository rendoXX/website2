---
import '../styles/global.css';
import Logo from '../components/Logo.astro';
---

<nav id="navbar">
  <div id="nav-container">
    <Logo />

    <!-- Burger menu button -->
    <button id="burger-menu" onclick="toggleMenu()">
      <div class="bar"></div>
      <div class="bar"></div>
      <div class="bar"></div>
    </button>
    
    <ul id="nav-menu">
      <li><button onclick="window.location.href='/'">Home</button></li>
      <li><button onclick="window.location.href='/2'">Clicker game</button></li>
      <li><button onclick="window.location.href='/3'">Flappy covet</button></li>
    </ul>
  </div>
</nav>

<script>
  function toggleMenu() {
    const menu = document.getElementById('nav-menu');
    const burger = document.getElementById('burger-menu');
    menu.classList.toggle('active');
    burger.classList.toggle('open');
  }
</script>

<style>
  /* Fix navbar layout */
  #navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    top: 0;
    width: 100%;
    height: 60px;
    background: rgba(20, 20, 20, 0.9);
    padding: 0 20px;
    z-index: 1000;
  }

  #nav-container {
    display: flex;
    align-items: center;
    width: 100%;
  }

  /* Fix logo position */
  #logo {
    font-size: 36px;
    font-weight: bold;
    background: none;
    border: none;
    cursor: pointer;
    position: relative;
    left: 0;
    margin-left: 10px;
    z-index: 1001; /* Ensures it stays above other elements */
  }

  /* Burger menu button */
  #burger-menu {
    display: flex;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    position: absolute;
    right: 20px;
    z-index: 1001;
  }

  .bar {
    width: 30px;
    height: 4px;
    background: white;
    transition: 0.3s;
  }

  /* Burger animation */
  #burger-menu.open .bar:nth-child(1) {
    transform: translateY(9px) rotate(45deg);
  }
  #burger-menu.open .bar:nth-child(2) {
    opacity: 0;
  }
  #burger-menu.open .bar:nth-child(3) {
    transform: translateY(-9px) rotate(-45deg);
  }

  /* Navigation menu */
  #nav-menu {
    display: none;
    flex-direction: column;
    position: absolute;
    top: 60px;
    right: 20px;
    background: rgba(20, 20, 20, 0.95);
    padding: 10px;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
  }

  #nav-menu.active {
    display: flex;
  }

  #nav-menu li {
    list-style: none;
    margin: 5px 0;
  }

  #nav-menu button {
    background: none;
    border: none;
    color: white;
    font-size: 18px;
    cursor: pointer;
    padding: 10px 15px;
  }

  #nav-menu button:hover {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }
</style>
