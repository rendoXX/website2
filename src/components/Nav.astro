---
import '../styles/global.css';
import Logo from '../components/Logo.astro';
---

<nav id="navbar">
  <div id="nav-container">
    <Logo />

    <!-- Burger menu (Only for mobile) -->
    <button id="burger-menu" onclick="toggleMenu()">
      <span></span>
      <span></span>
      <span></span>
    </button>
    
    <ul id="nav-menu">
      <li><button onclick="window.location.href='/'">Home</button></li>
      <li><button onclick="window.location.href='/2'">Clicker game</button></li>
      <li><button onclick="window.location.href='/3'">Flappy covet</button></li>
    </ul>
  </div>
</nav>

<script>
  function toggleMenu() {
    const menu = document.getElementById('nav-menu');
    menu.classList.toggle('active');
  }
</script>

<style>
  /* NAVBAR FIXES */
  #navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    top: 0;
    width: 100%;
    height: 60px;
    background: inherit; /* KEEP SAME COLOR */
    padding: 0 20px;
    z-index: 1000;
  }

  #nav-container {
    display: flex;
    align-items: center;
    width: 100%;
  }

  /* LOGO FIXES */
  #logo {
    font-size: 36px;
    font-weight: bold;
    background: none;
    border: none;
    cursor: pointer;
    position: relative;
    left: 10px;
    z-index: 1001;
  }

  /* BURGER MENU (MOBILE ONLY) */
  #burger-menu {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    position: absolute;
    right: 20px;
    z-index: 1001;
  }

  #burger-menu span {
    width: 30px;
    height: 4px;
    background: white;
    transition: 0.3s;
  }

  /* SHOW BURGER MENU ONLY ON MOBILE */
  @media (max-width: 768px) {
    #burger-menu {
      display: flex;
    }
    #nav-menu {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 60px;
      right: 20px;
      background: rgba(20, 20, 20, 0.95);
      padding: 10px;
      border-radius: 8px;
    }
    #nav-menu.active {
      display: flex;
    }
  }

  /* KEEP DESKTOP NAVBAR NORMAL */
  @media (min-width: 769px) {
    #nav-menu {
      display: flex !important;
    }
    #burger-menu {
      display: none !important;
    }
  }

  #nav-menu li {
    list-style: none;
    margin: 5px 0;
  }

  #nav-menu button {
    background: none;
    border: none;
    color: white;
    font-size: 18px;
    cursor: pointer;
    padding: 10px 15px;
  }

  #nav-menu button:hover {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
  }
</style>
